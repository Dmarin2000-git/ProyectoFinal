<Window x:Class="PaginaPrincipal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaginaPrincipal"
        mc:Ignorable="d"
        Icon="interface_eye_view_watch_eyeball_pupil_circle_icon_132981.ico"
        Title="WA317" Height="470" Width="902"
        >
    <DockPanel>
        <Grid>
            <TabControl Margin="10">
                <TabItem Header="CONSULTA" Height="40" Width="100">
                    <Grid Margin="10">
                        <TabControl TabStripPlacement="Left" Margin="0, 0, 0, 10">
                            <TabItem Name="Artículos" Header="Articles" Height="30" Width="100">
                                <TextBlock TextWrapping="WrapWithOverflow"><InlineUIContainer>
                                        <Grid Height="336" Width="511">
                                            <DataGrid x:Name="dataGrid1" IsReadOnly="True"/>
                                                
                                        </Grid>
                                    
                                    </InlineUIContainer><InlineUIContainer>
                                       <Grid Height="335" RenderTransformOrigin="0.5,0.5" Width="228">
                                           
                                       </Grid>
                                    </InlineUIContainer><InlineUIContainer>
                                       
                                    </InlineUIContainer><InlineUIContainer/></TextBlock>
                            </TabItem>

                            <TabItem Name="warehouse" Header="Almacenes" Height="30" Width="100">
                                <TextBlock TextWrapping="WrapWithOverflow" Margin="0,0,216,0"><InlineUIContainer>
                                            <Grid Height="336" Width="511">
                                                <DataGrid x:Name="dataGrid2" Margin="0,0,10,0" IsReadOnly="True"/>
                                                
                                            </Grid>
                                        </InlineUIContainer></TextBlock>
                            </TabItem>
                            <TabItem Name="employees" Header="Empleados" Height="30" Width="100">
                                <TabItem.Content>
                                    <TextBlock TextWrapping="WrapWithOverflow">
                                        <Grid Height="336" Width="659">
                                            <DataGrid x:Name="dataGrid3" Margin="0,0,132,0" IsReadOnly="True"/>
                                                
                                        </Grid>
                                    </TextBlock>
                                </TabItem.Content>
                            </TabItem>
                            <TabItem Name="provider" Header="Proveedores" Height="30" Width="100">
                                <TabItem.Content>
                                    <TextBlock TextWrapping="WrapWithOverflow">
                                        <Grid Height="336" Width="659">
                                            <DataGrid x:Name="dataGrid4" Margin="0,0,132,0" IsReadOnly="True"/>
                                                
                                        </Grid>
                                    </TextBlock>
                                </TabItem.Content>
                            </TabItem>
                            <Grid Height="100" Width="100"/>
                        </TabControl>
                    </Grid>
                </TabItem>

                <TabItem Header="CALCULOS" Height="40" Width="100">

                </TabItem>

                <TabItem Header="AM" Height="40" Width="100">
                    <Grid Margin="20">
                        
                        <ListBox HorizontalAlignment="Left" Height="73" Margin="0,172,0,0" VerticalAlignment="Top" Width="242">
                            <ListBoxItem x:Name="UpdateArticles" >ACTUALIZAR ARTICULOS TABLA ARTCILE</ListBoxItem>
                            <ListBoxItem x:Name="UpdateAlmacenes" >ACTUALIZAR STOCK TABLA ALMACEN</ListBoxItem>
                            <ListBoxItem x:Name="UpdateMarket" >ACTUALIZAR ARTICULOS TABLA MERCADO</ListBoxItem>
                        </ListBox>
                        <Button Content="CARGAR" HorizontalAlignment="Left" Margin="72,129,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

    </DockPanel>

</Window>
